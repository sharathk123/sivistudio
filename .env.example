# Sivi Studio Environment Variables
# Copy this file to .env.local and fill in your values

# Sanity CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_sanity_api_token

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase OAuth Callback URL
# Use this URL when configuring OAuth providers (Google, GitHub, etc.) in their respective consoles
# Format: {NEXT_PUBLIC_SUPABASE_URL}/auth/v1/callback
NEXT_PUBLIC_SUPABASE_AUTH_CALLBACK_URL=https://your-project.supabase.co/auth/v1/callback

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# Application
# Used for OAuth callbacks and absolute URLs
# In development: http://localhost:3000
# In production: https://your-domain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000
